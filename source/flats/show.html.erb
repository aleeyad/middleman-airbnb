<!-- source/flats/show.html.erb -->

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/berlin'); height: 50vh; background-position: center;">
</div>
<!-- Access data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->
<div class="container">
  <div class="flat-desc">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle", height: 70 %>
        <p><%= flat.name %></p>
      </div>



      <div class="col-md-4">
        <h4><%= flat.description %></h4>
        <p><%= flat.city_name %></p>
        <p class="rating">
          <i class="fa fa-star" style="color: orange"> </i>
          <i class="fa fa-star" style="color: orange"> </i>
          <i class="fa fa-star" style="color: orange"> </i>
          <i class="fa fa-star" style="color: orange"> </i>
          <i class="fa fa-star" style="color: gray"> </i>
        </p>
      </div>
    </div>
  </div>


    <div class="col-md-4">
      <form action="#" class="form-inline">
      <h3>Book this flat</h3>
      <div class="form-group">
        <div class="row">
        <input type="text" class="form-control input-lg" placeholder="checkin">
        <input type="text" class="form-control input-lg" placeholder="checkout">
    </div>

      <input type="submit" class="btn btn-primary btn-lg" value="Book it">
    </form>
  </div>
</div>

